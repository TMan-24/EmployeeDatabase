<Window x:Class="EmployeeDatabase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeDatabase"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FFDD1818">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <TextBox Text="{Binding Text}" Name="Info_field" HorizontalAlignment="Left" Height="302" TextWrapping="Wrap" VerticalAlignment="Top" Width="641" Margin="68,59,0,0" Background="White"/>
        <Button Content="See Assets" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="57,21,0,0" Click="Button_Click" Height="19"/>

    </Grid>
</Window>
